@using Web.YFC.Common
<!-- subheader begin -->
<section id="subheader" data-speed="2" data-type="background">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Events</h1>
            </div>
        </div>
    </div>
</section>
<!-- subheader close -->

<div class="clearfix"></div>

<!-- content begin -->
<div id="content">

    <div class="container">
        <div class="row">

            @foreach (var item in ViewData["Events"] as IEnumerable<Event>)
            {

                <!-- event item begin -->
                <div class="col-md-6 event-item">
                    <div class="inner">
                        <div class="left-col">
                            <img src="@AppSettings.ImageUrl/Events/@item.EventId/@item.Picture" alt="">
                        </div>
                        <div class="right-col">
                            <span class="date">@item.EventDate.Day</span>
                            <span class="month">@item.EventDate.ToString("MMM")</span>
                        </div>
                    </div>
                    <div class="desc">
                        <a href="#">
                            <h3>@item.Title</h3>
                        </a>
                        <span class="text">@item.Description</span>
                    </div>
                </div>
                <!-- event item close -->
            }
        </div>
            </div>

        </div>
        <!-- content close -->