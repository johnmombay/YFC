@model Web.YFC.ViewModels.LoginViewModel

<!-- subheader begin -->
<section id="subheader" data-speed="2" data-type="background">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Administration</h1>
            </div>
        </div>
    </div>
</section>
<!-- subheader close -->

<div class="clearfix"></div>

<!-- content begin -->
<div id="content">

    <div class="container event-single">
        <div class="row">
            <div class="col-md-6">
                <div id="contact-form-wrapper">
                    <div class="contact_form_holder">
                        <h1>Sign-In</h1>
                        <form asp-action="Login">
                            <input type="text" class="form-control" asp-for="Email" placeholder="Email Address" />
                            <input type="password" class="form-control" asp-for="Password" placeholder="Password"/>
                            <p id="btnsubmit">
                                <input type="submit" id="send" value="Login" class="btn btn-custom" />
                            </p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <h1 class="text-center"><i class="fa fa-key fa-2x"></i></h1>
                <h2>Authorization Required</h2>
                <p>This is a secured section and authorization is required to enter.<br/>  
                    If you do not have any log-in credentials, please request access through church leaders.</p>
            </div>
        </div>
    </div>

</div>
<!-- content close -->