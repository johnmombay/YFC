@model Admin.YFC.Models.Content
<div class="">

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Delete Content</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-10 ">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="ContentId" />
                                <div class="form-group">
                                    <label asp-for="SectionId"></label>
                                    <select asp-for="SectionId" class="form-control" asp-items="@ViewBag.Sections"></select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Material"></label>
                                    <textarea id="summernote" asp-for="Material" class="form-control"></textarea>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>