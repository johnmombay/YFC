@model Admin.YFC.Models.Church
<div class="">

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Update Church Section</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-10 ">
                            <form asp-action="Edit" enctype="multipart/form-data">
                                <input type="hidden" asp-for="ChurchId" />
                                <input type="hidden" asp-for="Picture" />
                                <div class="form-group">
                                    <label asp-for="Picture"></label>
                                    <input type="file" name="file" asp-for="Picture" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Title"></label>
                                    <input asp-for="Title" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description"></label>
                                    <input asp-for="Description" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="URL"></label>
                                    <input asp-for="URL" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>