@model Admin.YFC.ViewModels.ResetPasswordViewModel
<div class="">

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Update Role</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-10 ">
                            <form asp-action="ResetPassword">
                                <input asp-for="Id" type="hidden" value="@ViewBag.Id" />
                                <div class="form-group">
                                    <label asp-for="NewPassword"></label>
                                    <input type="password" asp-for="NewPassword" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>