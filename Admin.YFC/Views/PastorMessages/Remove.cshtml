@model Admin.YFC.Models.PastorMessage
<div class="">

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Delete Pastor's Message</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-10 ">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="PastorMessageId" />
                                <div class="form-group">
                                    <label asp-for="PastorId"></label>
                                    <select asp-for="PastorId" class="form-control" asp-items="@ViewBag.Pastors"></select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Title"></label>
                                    <input asp-for="Title" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Message"></label>
                                    <textarea id="summernote" asp-for="Message" class="form-control"></textarea>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>