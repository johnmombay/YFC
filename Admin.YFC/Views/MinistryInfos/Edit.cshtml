@model Admin.YFC.Models.MinistryInfo
<div class="">

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Update Ministry Information</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-10 ">
                            <form asp-action="Edit">
                                <input type="hidden" asp-for="MinistryInfoId" />
                                <div class="form-group">
                                    <label asp-for="MinistryId">Ministry</label>
                                    <select asp-for="MinistryId" class="form-control" asp-items="@ViewBag.Ministries"></select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Content"></label>
                                    <textarea id="summernote" asp-for="Content" class="form-control"></textarea>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>